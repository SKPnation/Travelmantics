<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="18dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/travel_deal_image"
                android:layout_width="120dp"
                android:layout_height="120dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/travel_deal_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/travel_deal_image"
                    android:text="Lagos"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    />

                <TextView
                    android:id="@+id/travel_deal_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lagos Holiday Resort"
                    android:textSize="14sp"
                    android:layout_toRightOf="@id/travel_deal_image"
                    android:layout_below="@+id/travel_deal_image"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    />

                <TextView
                    android:id="@+id/travel_deal_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="10000"
                    android:textColor="#F62459"
                    android:textSize="14sp"
                    android:layout_toRightOf="@id/travel_deal_image"
                    android:layout_below="@+id/travel_deal_image"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>